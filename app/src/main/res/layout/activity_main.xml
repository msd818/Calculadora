<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_Calculadora"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/etProceso"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Calculadora"
        android:gravity="right|center_vertical"
        android:text="0"
        android:textColor="#EAE4E4"
        android:textSize="80dp"
        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal2"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical5"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical1"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal1" />

    <Button
        android:id="@+id/btnAC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="AC"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal3"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical2"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical1"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal2" />

    <Button
        android:id="@+id/btnMasMenos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="+/-"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal3"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical3"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical2"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal2" />

    <Button
        android:id="@+id/btnPorcentaje"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="%"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal3"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical4"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical3"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal2" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondoAzul_Boton"
        android:text="/"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal3"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical5"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical4"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal2" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="7"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal4"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical2"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical1"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal3" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="8"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal4"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical3"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical2"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal3" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="9"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal4"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical4"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical3"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal3" />

    <Button
        android:id="@+id/btnX"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondoAzul_Boton"
        android:text="X"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal4"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical5"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical4"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal3" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="4"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal5"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical2"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical1"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="5"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal5"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical3"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical2"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="6"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal5"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical4"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical3"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal4" />

    <Button
        android:id="@+id/btnMenos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondoAzul_Boton"
        android:text="-"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal5"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical5"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical4"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal4" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="1"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal6"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical2"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical1"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal5" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="2"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal6"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical3"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical2"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal5" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="3"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal6"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical4"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical3"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal5" />

    <Button
        android:id="@+id/btnMas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondoAzul_Boton"
        android:text="+"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal6"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical5"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical4"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal5" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text="0"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal7"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical3"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical1"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal6" />

    <Button
        android:id="@+id/btnComa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondo_Boton"
        android:text=","
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal7"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical4"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical3"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal6" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/fondoAzul_Boton"
        android:text="="
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/guiahorizontal7"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical5"
        app:layout_constraintStart_toStartOf="@+id/guia_vertical4"
        app:layout_constraintTop_toTopOf="@+id/guiahorizontal6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_vertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_vertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.28" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_vertical3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_vertical4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.73" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_vertical5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiahorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiahorizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiahorizontal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiahorizontal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiahorizontal5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiahorizontal6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiahorizontal7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>